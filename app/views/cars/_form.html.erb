<%= simple_form_for(@car) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
    <%= f.label :category %>
  <%= f.text_field :category %>
    <%= f.label :address %>
  <%= f.text_field :address %>
    <%= f.label :features %>
  <%= f.text_field :features %>
    <%= f.label :summary %>
  <%= f.text_field :summary %>
    <%= f.label :engine %>
  <%= f.text_field :engine %>
    <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
