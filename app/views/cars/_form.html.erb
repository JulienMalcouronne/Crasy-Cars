<div class="container">
  <div class="form d-flex justify-content-center">
    <%= simple_form_for(@car) do |f| %>
      <div class="m-2" style="color: aliceblue;">
        <div><%= f.label :name %></div>
        <%= f.text_field :name %>
      </div>
      <div class="m-2" style="color: aliceblue;">
        <%= f.input :category, collection: [ "Earth", "Air", "Sea", "Space"] %>
      </div>
      <div class="m-2" style="color: aliceblue;">

        <%= f.input :address,
        input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
      </div>
      <div class="m-2" style="color: aliceblue;">
        <%= f.input :features, collection: ["Can shoot", "Very fast", "Can travel through time", "Can drift", "Space travel", "Underwater", "Other"] %>
      </div>
      <div class="m-2 " style="color: aliceblue;">
        <div><%= f.label :summary %></div>
        <%= f.text_field :summary %>
      </div>
      <div class="m-2" style="color: aliceblue;">

        <%= f.input :engine, collection: ["V8", "Nuclear", "Gas", "Nitro", "Other"] %>
      </div>
      <div class="m-2" style="color: aliceblue;">
        <div><%= f.label :price %></div>
        <%= f.number_field :price %>
      </div>
      <div class="m-2" style="color: aliceblue;">
        <div><%= f.label :capacity %></div>
        <%= f.number_field :capacity %>
      </div>
      <div class="m-2" style="color: aliceblue;">
        <div><%= f.input :photo, as: :file %></div>
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
