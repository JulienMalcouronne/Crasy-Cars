<div class="container">
  <div class="allcards pt-3 pb-3">
    <div class="title text-center pr-2 d-flex justify-content-between align-items-center">
      <h1>All our vehicules (<%= @cars.length %>)</h1>
    </div>
    <div class="cards mt-3">
      <% @cars.each do |car| %>
        <div class="card-trip" >
        <% if car.photo.attached?%>
          <img src="<%= cl_image_path car.photo.key, height: 300 %>" alt="">
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to car.name, car_path(car[:id]) %></h2>
              <div class="card-summary mt-2 mr-1"><p><%= car.summary %></p></div>
            </div>
              <h2 class="card-trip-pricing"><%= car.price %>$/day</h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
        <% end %>
        </div>
      <% end %>
    </div>
    <div style="width: 100%; height: 300px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
