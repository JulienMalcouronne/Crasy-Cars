<h1>All our cars (<%= @cars.length %>) </h1>
<% if policy(Car).create? %>
  <%= link_to "New Car", new_car_path %>
<% end %>
<div class ="container">

<div class="cards">
<% @cars.each do |car| %>
    <% if car.photo.attached?%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path car.photo.key, height: 300, crop: :fill %>')">
          <%= link_to car.name, car_path(car[:id]) %>
          <%= car.category %>
          <%= car.address %>
          <%= car.capacity %>
          <%= car.features %>
          <%= car.price %>
          <%= car.engine %>
          <%= car.features %>
          <%= car.summary %>
          <% if policy(car).edit? %>
            <%= link_to "Update", edit_car_path(car) %>
          <% end %>
        <% end %>
      </div>
  <% end %>
</div>
</div>
