<h1>All our cars (<%= @cars.length %>) </h1>
<%= link_to "add a car", car_path("new")%>
<div class ="container">

<div class="cards">
<% @cars.each do |car| %>
    <% if car.photo.attached?%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path car.photo.key, height: 300, crop: :fill %>')">
          <%= link_to car.name, car_path(car[:id]) %>
          <%= car.category %>
          <%= car.address %>
          <%= car.capacity %>
          <%= car.features %>
          <%= car.price %>
          <%= car.engine %>
          <%= car.features %>
          <%= car.summary %>
            <% end %>
      </div>
  <% end %>
</div>
</div>
