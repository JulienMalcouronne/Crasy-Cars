<div class="container content-wrapper pt-5">
  <h1><%= @car.name %> </h1>
  <div class="wrap">
    <div class="all">
      <div class="text">
          <div class="titles">
            <span>Price</span><p><%= "#{@car.price} $ per day" %></p>
          </div>
          <div class="titles">
            <span>Summary</span><p><%= "#{@car.summary}" %></p>
          </div>
          <div class="titles">
           <span>Capacity</span><p><%= "#{@car.capacity}" %></p>
          </div>
          <div class="titles">
            <span>Power</span><p><%= "#{@car.engine}" %></p>
          </div>
          <div class="titles">
            <span>Feature</span><p><%= "#{@car.features}" %></p>
          </div>
      </div>
      <div class="card-product" >
        <%= image_tag cl_image_path @car.photo.key, height: 300 %>
        <div class="links">
          <%= link_to "Delete",
              car_path(@car),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
          <% if policy(@car).edit? %>
          <%= link_to "Update", edit_car_path(@car) %>
                    <% end %>
          <%= link_to "Back", cars_path %>
        </div>
      </div>
     <div class="bookings" style="width: 400px; margin: 0 auto;">
        <h2>Book the Vehicule</h2>
          <%= simple_form_for :search, method: "get" do |f| %>
            <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.button :submit, "Go", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
